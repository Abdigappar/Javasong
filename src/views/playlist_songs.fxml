<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.PlaylistSongsController"
      spacing="15" >
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label fx:id="playlistTitle" text="🎶 Плейлист: " style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ListView fx:id="songList" prefHeight="300"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="⬅ Назад" onAction="#goBack"/>
    </HBox>
</VBox>
