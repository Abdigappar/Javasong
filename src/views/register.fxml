<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.RegisterController"
      alignment="CENTER" spacing="15">
    <padding>
        <Insets top="30" right="20" bottom="30" left="20"/>
    </padding>

    <Label text="Регистрация" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Имя пользователя"/>
    <PasswordField fx:id="passwordField" promptText="Пароль"/>
    <Label fx:id="statusLabel" textFill="#804f75"/>
    <HBox spacing="10">
        <Button text="Создать аккаунт" onAction="#handleRegister"/>
        <Button text="Назад" onAction="#goToLogin"/>
    </HBox>
</VBox>
