<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.SavedController"
      spacing="20">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="💾 Сохранённые песни" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ListView fx:id="savedList" prefHeight="300"/>

    <HBox spacing="10">
        <Button text="⬅️ Назад" onAction="#goToHome"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="🗑 Очистить всё" onAction="#clearSaved"/>
    </HBox>
</VBox>
